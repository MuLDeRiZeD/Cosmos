bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q -D pulse sset Master 5%- && killall -USR1 i3status
bindsym XF86AudioMute exec --no-startup-id amixer -q -D pulse sset Master toggle && killall-USR1 i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 1 toggle

